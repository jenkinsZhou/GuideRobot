<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_color_title">@color/colorPrimary</item>
        <item name="md_color_content">@color/colorPrimary</item>
        <item name="md_color_button_text">@color/colorPrimaryDark</item>
    </style>


    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
    </style>


</resources>
